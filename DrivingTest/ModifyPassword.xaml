<Window x:Class="DrivingTest.ModifyPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" Height="250" Width="300">
    <Grid>
        <Label Content="   旧密码 " Height="28" HorizontalAlignment="Left" Margin="23,12,0,0" Name="label1" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="96,14,0,0" Name="password_textBox" VerticalAlignment="Top" Width="120" />
        <Label Content="   新密码 " Height="28" HorizontalAlignment="Left" Margin="23,54,0,0" Name="label2" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="96,56,0,0" Name="newpassword_textBox" VerticalAlignment="Top" Width="120" />
        <Label Content="确认新密码" Height="28" HorizontalAlignment="Left" Margin="23,102,0,0" Name="label3" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="96,104,0,0" Name="confirmpassword_textBox" VerticalAlignment="Top" Width="120" />
        <Button Content="确认修改" Height="23" HorizontalAlignment="Left" Margin="96,163,0,0" Name="xiugai_button" VerticalAlignment="Top" Width="75" Click="xiugai_button_Click" />
    </Grid>
</Window>
